{% extends 'base.html' %}

{% block title %}
{% if initial_registration %}
Setup
{% else %}
Register
{% endif %}
{% endblock %}

{% block header %}
{% if initial_registration %}
Configure and register for ToolShare
{% else %}
Register for ToolShare
{% endif %}
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="/static/css/register.css" />
{% endblock %}

{% block content %}
<form action="/register" class="sectional-form registration" method="POST">
    {% if initial_registration %}
    <div class="alert alert-success">This is the initial registation, which will configure ToolShare for the first time.</div>
    {% endif %}
    <div class="alert alert-warning">{{ form.error }}</div>
    <fieldset>
        <legend>Account</legend>
        <div class="form-group {% if form.fields.username.error %}has-error{% endif %}">
            <label class="control-label" for="username">Username</label>
            <input class="form-control input-lg" tabindex="1" type="text" id="username" name="username" value="{{ form.fields.username.value }}" />
            <label class="control-label error" for="username">{{ form.fields.username.error }}</label>
        </div>
        <div class="form-group {% if form.fields.password.error %}has-error{% endif %}">
            <label class="control-label" for="password">Password</label>
            <input class="form-control input-lg" tabindex="2" type="password" id="password" name="password" />
            <label class="control-label error" for="password">{{ form.fields.password.error }}</label>
        </div>
        <div class="form-group {% if form.fields.password2.error %}has-error{% endif %}">
            <label class="control-label" for="password2">Confirm Password</label>
            <input class="form-control input-lg" tabindex="3" type="password" id="password2" name="password2" />
            <label class="control-label error" for="password2">{{ form.fields.password2.error }}</label>
        </div>
        <div class="form-group {% if form.fields.email.error %}has-error{% endif %}">
            <label class="control-label" for="email">Email</label>
            <input class="form-control input-lg" tabindex="4" type="text" id="email" name="email" value="{{ form.fields.email.value }}" />
            <label class="control-label error" for="email">{{ form.fields.email.error }}</label>
        </div>
    </fieldset>
    <fieldset>
        <legend>Profile</legend>
        <div class="form-group {% if form.fields.first_name.error %}has-error{% endif %}">
            <label class="control-label" for="first_name">First Name</label>
            <input class="form-control input-lg" tabindex="5" type="text" id="first_name" name="first_name" value="{{ form.fields.first_name.value }}" />
            <label class="control-label error" for="first_name">{{ form.fields.first_name.error }}</label>
        </div>
        <div class="form-group {% if form.fields.last_name.error %}has-error{% endif %}">
            <label class="control-label" for="last_name">Last Name</label>
            <input class="form-control input-lg" tabindex="6" type="text" id="last_name" name="last_name" value="{{ form.fields.last_name.value }}" />
            <label class="control-label error" for="last_name">{{ form.fields.last_name.error }}</label>
        </div>
        <div class="form-group {% if form.fields.address.error %}has-error{% endif %}">
            <label class="control-label" for="address">Address</label>
            <textarea class="form-control input" tabindex="7" id="address" name="address">{{ form.fields.address.value }}</textarea>
            <label class="control-label error" for="address">{{ form.fields.address.error }}</label>
        </div>
    </fieldset>
    {% if initial_registration %}
    <fieldset>
        <legend>Site Setup</legend>
        <p>
            Because you are the first user to register, you will be made a site administrator.<br />
            <br />
            Additionally, a community and community shed will be created. Please provide an address for this shed.<br />
        </p>
        <div class="form-group {% if form.fields.shed_address.error %}has-error{% endif %}">
            <label class="control-label" for="shed_address">Community Shed Address</label>
            <textarea class="form-control input" tabindex="7" id="shed_address" name="shed_address">{{ form.fields.shed_address.value }}</textarea>
            <label class="control-label error">{{ form.fields.shed_address.error }}</label>
        </div>
    </fieldset>
    {% endif %}
    {% csrf_token %}
    {% if initial_registration %}
    <input class="btn btn-primary" tabindex="99" type="submit" value="Set Up" />
    {% else %}
    <input class="btn btn-primary" tabindex="99" type="submit" value="Sign Up" />
    {% endif %}
</form>
{% endblock %}

