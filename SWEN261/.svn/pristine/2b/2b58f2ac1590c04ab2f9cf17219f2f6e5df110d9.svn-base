/* Material theme cleanup */

.material-input:after {
    display: none;
}

.alert:empty {
    display: none;
}

/* Navigation */

.navbar {
    border-radius: 0;
    border-width: 0;
    border-bottom-width: 1px;
}

/* Site */

.container {
    width: 960px;
    position: relative;
}

.container .well {
    position: relative;
}

.content-container {
    background-color: #F8F8F8;
    border: solid 1px #E7E7E7;
    padding: 20px;
    border-radius: 2px;
}

.content-container:empty {
    display: none;
}

/* Page */

.page-header {
    padding: 0;
    padding-bottom: 10px;
    width: 830px;
    margin: 0;
}

.page-header h1 {
    border: none;
    margin: 0;
    padding: 0;
    font-size: 20px;
    height: 30px;
    display: inline;
}

h1.page-header:empty {
    display: none;
}

/* Landing page */

.call-to-action {
    float: right;
    margin: 10px 30px;
}

.call-to-action-or {
    background-color: #E4E4E4;
    padding: 5px 10px;
    margin: auto 10px;
    border-radius: 3px;
    display: inline-block;
    color: #555555;
    cursor: default;
}

/* Action links */

.page-actions {
    list-style: none;
    display: inline;
    margin: 0;
    padding: 0;
    margin-left: 30px;
    margin-top: -5px;
    width: 300px;
}

.page-actions > li {
    display: inline;
    margin-right: 10px;
}

.page-actions > li a.btn {
    margin: 0;
    margin-bottom: 5px;
    height: 30px;
    line-height: 30px;
    padding: 0 20px;
}

.page-actions > li a.btn:not(.btn-success):not(.btn-warning) {
    background-color: #E0E0E0;
}

.page-actions > li a .caret {
    margin-left: 5px;
    margin-bottom: 3px;
}

/* Dropdown styles */

.dropdown-header {
    cursor: default;
}

.dropdown-menu > li > a:hover {
    background-color: #F5F5F5;
}

