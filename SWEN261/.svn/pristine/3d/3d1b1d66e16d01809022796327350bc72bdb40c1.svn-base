/* Material theme cleanup */

.material-input:after {
    display: none;
}

.alert:empty {
    display: none;
}

/* Navigation */

.navbar {
    border-radius: 0;
    border-width: 0;
    border-bottom-width: 1px;
}

/* Site */

.container {
    width: 960px;
}

.content-container {
    background-color: #F8F8F8;
    border: solid 1px #E7E7E7;
    padding: 20px;
    border-radius: 2px;
}

.content-container:empty {
    display: none;
}

/* Page */

h1.page-header {
    border: none;
    margin: 0;
    padding: 0;
    font-size: 20px;
    margin-bottom: 20px;
}

h1.page-header:empty {
    display: none;
}

/* Landing page */

.call-to-action {
    float: right;
    margin: 10px 30px;
}

.call-to-action-or {
    background-color: #E4E4E4;
    padding: 5px 10px;
    margin: auto 10px;
    border-radius: 3px;
    display: inline-block;
    color: #555555;
    cursor: default;
}

